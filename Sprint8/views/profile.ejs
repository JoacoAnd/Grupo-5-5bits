    <%- include ( './partials/header' ); %>

    <main>
        <div id="profile">        
        <% if (locals.userLogged) { %>
            
            <img src="imagenes/usersProfilePhotos/<%= locals.userLogged.avatar %>" class="avatar">
            
            <div id="data">
                <p> Nombre: <%= locals.userLogged.nombre %> </p>
                <p> Apellido: <%= locals.userLogged.apellido %> </p>
                <p> E-mail: <%= locals.userLogged.email %> </p>
                <button class="buttonlogout">Logout</button>
            </div>
        <% } else {%>
            <h1>Ud. no debiera estar en esta vista sin estar logueado. Algo anda mal.</h1>
        <%}%>
            
        </div>
    </main>
    <script src="/js/profile.js"></script>
