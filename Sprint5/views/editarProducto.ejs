<%- include ( './partials/head' ); %>
    <%- include ( './partials/header' ); %>

        <main>
            <div class="img-left">
            </div>
            <div class="formulariosedit">
                <form method="post" action="/products/<%= producto.id %>?_method=PUT" id="producto">

                    <h2>Administración de productos</h2>
                    <div class="inputs">
                        <input type="text" name="nombre" id="nombre" minlength="5" maxlength="60" required
                            placeholder="Nombre" value="<%=producto.nombre%>" />
                        <input type="text" name="descripcion" id="descripcion" minlength="5" maxlength="60"
                            placeholder="Descripción" value="<%=producto.descripcion%>" />

                        <select name="categoria" id="categoria">
                            <option value="">[Categoría]</option>
                            <% for(let i=0; i < categorias.length ; i++) { %>
                                <option <%=categorias[i]==producto.categoria?'selected':'' %> value="<%= categorias[i]
                                        %>"><%= categorias[i] %>
                                </option>
                                <% } %>
                        </select>
                    </div>
                    <h3>Talles disponibles:</h3>
                    <div class="check">
                        <% for(let i=0; i < talles.length ; i++) { %>
                            <input type="checkbox" value="<%= talles[i] %>" name="talle<%= talles[i] %>"
                                <%=producto.talle.includes(talles[i]) ? 'checked' : '' %> />
                            <%= talles[i] %>
                                <% } %>
                    </div>

                    <div class="inputs">
                        $ <input type="number" name="precio" id="precio" required placeholder="Precio"
                            value="<%= producto.precio %>" />
                        <label for="imagen">Imagen del producto:</label> <input type="file" name="imagen" id="imagen"
                            required />
                    </div>

                    <button class="guardar">Guardar</button>
                </form>

                <form action="/products/<%= producto.id %>?_method=DELETE" method="post" class="deleteboton">
                    <button class="guardar" style="background-color: red;">Eliminar</button>
                </form>
            </div>
            <div class="img-right">
            </div>
        </main>


        <%- include ( './partials/footer.ejs' ); %>